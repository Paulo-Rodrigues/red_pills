---
pageable: true
per_page: 12
---
<div class="tags-wrapper">

<h1 class="tags-title">Articles tagged '<%= tagname %>'</h1>
<hr>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="tags-items">
  <% page_articles.each_with_index do |article, i| %>
    <li class="tags-items__item"><%= link_to article.title, article %> <span class="post-date"><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

</div>
